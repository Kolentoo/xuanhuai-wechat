.top {background: url('http://elite-league.oss-cn-shanghai.aliyuncs.com/mini/bj2.png') no-repeat center center;
background-size:100% 100%;
height: 609rpx;
/* height: 100vh; */
}

.notice {
  padding-top:60px;
  /* padding-top:45%; */
  }
.top .p1 {font-size:28px;color:#fff;font-weight:bold;}
.top .p2 {font-size:16px;color:#fff;margin-top:5px;}

.btn-group {display:flex;justify-content: space-between;align-items: center;padding:40px 60px 0;}
.btn-group .btn {width: 115px;height:42px;background:rgba(243,158,82,1);border-radius:21px;
display:block;line-height: 42px;color:#fff;text-align: center;font-size: 14px;}

.content {padding:0 25px;}
.content .title {color:#8E2A2A;font-size:22px;font-weight:bold;}
.content .gift {margin:25px 0 30px 0;}
.share-btn {width:100%;height:49px;background:rgba(243,158,82,1);line-height: 49px;text-align: center;
box-shadow:0px 3px 10px rgba(230,147,72,0.28);opacity:1;border-radius:25px;color:#fff;font-size: 14px;}

.help {color:#B2B2B2;margin-top:40px;}
.help .help-title {color:#8D8D8D;font-size: 16px;}
.help .help-body {color:#B2B2B2;font-size: 12px;margin-top:10px;}
.bottom image{height: 142rpx;}


.share-pic {background:url('http://elite-league.oss-cn-shanghai.aliyuncs.com/mini/share.png') no-repeat center center;
background-size:100%;height: 980rpx;padding-top:10px;margin:0 auto;position: relative;}

.pop {position: absolute;z-index:1000;left: 0;top: 0;width: 100%;height: 100vh;overflow: hidden;
display:flex;align-items: center;justify-content: center;}
.mask {background: rgba(0,0,0,0.5);width: 100%;height: 100%;position: fixed;top:0;left:0;z-index:100;}
.pop .box {z-index:101;position: relative;}
.pop .save-btn {background:rgba(243,158,82,1);box-shadow:0px 3px 10px rgba(230,147,72,0.28);
border-radius:25px;font-size: 14px;color:#fff;text-align:center;line-height:40px;width:74%;margin:10px auto 0;}
.tips {font-size: 12px;color:#fff;margin-top:8px;}

.info-box {display:flex;align-items: center;margin-top:18px;margin-left:3px;}
.avatar {width: 40px;height: 40px;border-radius:50%;overflow: hidden;margin:10px 10px 0 15px;}
.avatar image{width: 100%;height: 100%;margin-top:5px;}
.nickname {font-size: 12px;color:#fff;margin-left:5px;}
.code {position:absolute;width: 80px;height:80px;bottom: 35px;right: 20px;}
.code image{width: 100%;height: 100%;} 


.pic {width: 280px;height: 430px;
z-index:200;
margin:30px auto 0; 
}
.all {height: 100vh;overflow: hidden;}