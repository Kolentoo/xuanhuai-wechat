/* pages/Invitate/Invitate.wxss */

.banner {background:url('https://elite-league.oss-cn-shanghai.aliyuncs.com/mini/banner.png') no-repeat center center;
background-size:100%;height: 760rpx;display:flex;justify-content: space-between;align-items: flex-start;}

.banner .back {width: 44rpx;padding:20rpx;}
.banner .rule {color:#1B1C20;font-size:32rpx;padding:20rpx;}

.create-pic {background: url('https://elite-league.oss-cn-shanghai.aliyuncs.com/mini/btn.png') no-repeat center center;
background-size:100%;height: 78rpx;line-height: 78rpx;text-align: cemter;color:#fff;margin:50rpx;}
.create-pic .btn-txt {font-size:32rpx;background: none;color:#fff;}

.friends {padding:30rpx 50rpx 50rpx;color:#1B1C20;font-size:36rpx;font-weight:800;}
.friends .title {margin-bottom:30rpx;}
.friend-list {display:flex;align-items: center;padding:20rpx 0;}
.avatar {width: 80rpx;height: 80rpx;overflow:hidden;border-radius:50%;}
.name {font-size:28rpx;color:#1B1C20;font-weight: bold;margin-left:30rpx;}


.pic {width: 250px;height: 440px;
z-index:200;
margin:30px auto 0; 
}

.share-pic {background:url('http://elite-league.oss-cn-shanghai.aliyuncs.com/mini/share.png') no-repeat center center;
background-size:100%;height: 980rpx;padding-top:10px;margin:0 auto;position: relative;}

.pop {position: absolute;z-index:1000;left: 0;top: 0;width: 100%;height: 100vh;overflow: hidden;
display:flex;align-items: center;justify-content: center;}
.mask {background: rgba(0,0,0,0.5);width: 100%;height: 100%;position: fixed;top:0;left:0;z-index:100;}
.pop .box {z-index:101;position: relative;}
.pop .save-btn {background:rgba(243,158,82,1);box-shadow:0px 3px 10px rgba(230,147,72,0.28);
border-radius:25px;font-size: 14px;color:#fff;text-align:center;line-height:36px;width:74%;margin:10px auto 0;}