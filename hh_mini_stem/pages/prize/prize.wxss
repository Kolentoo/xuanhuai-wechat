/* pages/prize/prize.wxss */

.title {font-size:36rpx;color:#1B1C20;padding-top:20rpx;}
.current-box {padding:60rpx 0 0 0;}
.current {color:#1B1C20;}
.num {color:#8D2006;font-size:56rpx;font-weight: bold;padding:10rpx 0;line-height: 80rpx;}

.record {padding:40rpx 0 0 0;border-top:1px solid rgba(240,243,244,1);margin: 40rpx 40rpx 0;}
.record-title {display:flex;align-items: center;margin-bottom:40rpx;}
.record-title .shape {width: 2rpx;height: 32rpx;background:rgba(141,32,6,1);border:1px solid rgba(112,112,112,1);}
.record-title .txt {color:#8D2006;font-size:32rpx;margin-left: 10rpx;}

.prize-list {padding:20rpx 0;border-bottom:1rpx solid #F0F3F4;}
.prize-con {display:flex;align-items: center;justify-content: space-between;font-size:32rpx;color:#333;}
.prize-time {color:#CFCFCF;font-size:24rpx;margin-top: 8rpx;}

.nodata {padding:50rpx;font-size:24rpx;color:#CFCFCF;}